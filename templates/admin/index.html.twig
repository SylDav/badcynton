{% extends 'base.html.twig' %}
{% block title 'BadCynton' %}

{% block body %}

    <div class="mt-4">
        <h1 class="ml-5">Bien le bonjour, chère Cynthia &#128522;</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row justify-content-md-center mt-4">
            <!-- <div class="col-1"></div> -->

            {% for date in dates %}
                <div class="list-group col-md-2" style="overflow-y: auto;">
                    <div class="list-group-item active text-center">
                        {{ trans_month_hash[date.1.date|date("M")] }} {{ date.1.date|date("Y") }}
                    </div>
                    {% for d in date %}
                        {% if d.id != 0 %}
                            <a href="{{ path('admin.lesson.edit', {id: d.id}) }}" class="list-group-item d-flex justify-content-between align-items-center" id="tooltip" date-placement="top" title=
                            "Club : {{ d.club }}
                            Horaire : {{ d.date|date("h:i")}}
                            Thème : {{ d.theme }}">
                                {{ d.date|date("d") }} {{ trans_day_hash[d.date|date("l")] }}
                                <span class="badge badge-primary badge-pill">{{ d.joueurs }}</span>
                            </a>
                        {% else %}
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                {{ d.date|date("d") }} {{ trans_day_hash[d.date|date("l")] }}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
